<div id="in-right-box">
  <h3>&nbsp;&nbsp;Player Character一覧</h3>
  <ul>
  <% @player_chars.each do |pc_chara| -%>
    <% if pc_chara.name && pc_chara.character_sheet_file_name %>
      <li><%= pc_chara.player.player_type %>：<%= link_to pc_chara.name, character_sheet_path(t_session_id: @t_session.id, character_id: pc_chara.id) %></li>
    <% elsif pc_chara.name -%>
      <li><%= pc_chara.player.player_type %>：<%= pc_chara.name %></li>
    <% else -%>
      <li><%= pc_chara.player.player_type %>：未決定 </li>
    <% end -%>
  <% end -%>
  </ul>
</div>